{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "ami-9abea4fb",
    "instance_type": "t2.large",
    "ssh_username": "ubuntu",
    "ami_name": "base-0-java {{timestamp}}",
    "launch_block_device_mappings": [
    {
      "device_name": "/dev/sde",
      "snapshot_id": "snap-197ab544"
    },
    {
      "device_name": "/dev/sdf",
      "snapshot_id": "snap-28b28ad2"
    },
    {
      "device_name": "/dev/sdr",
      "snapshot_id": "snap-412a8d1d"
    }]
  }],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./base-0-java.play"
    }
  ]
}
